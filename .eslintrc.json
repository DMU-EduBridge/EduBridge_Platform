{
  "extends": ["next/core-web-vitals"],
  "rules": {
    // 기본 JavaScript 규칙
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    // "no-console": "warn",
    "no-console": "off",
    "no-debugger": "error",

    // React 관련 규칙
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "off",

    // Next.js 관련 규칙
    "@next/next/no-img-element": "error",
    "@next/next/no-html-link-for-pages": "error"
  }
}